<div class="container">
    <div class="indexDiv">
      <h1><%= title %></h1>
  
      <form method="POST" action="">
        <div class="form-group">
          <label for="name">Category:</label>
          <input id="name" class="form-control" type="text" placeholder="Casual, Sports etc." name="name" value="<%= category ? category.name : '' %>">
          <label for="description">Description:</label>
          <textarea id="description" class="form-control" placeholder="This shoes provides comfort" name="description"><%= category ? category.description : '' %></textarea>
        </div>
        <button class="btn btn-primary" type="submit">Submit</button>
      </form>
    </div>
  </div>
  