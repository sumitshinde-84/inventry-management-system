<div class="container">
    <div class="indexDiv">
        <h1><%= title %></h1>

        <form method="POST" action="" enctype="multipart/form-data">
            <div class="form-group">
                <label for="name">Name:</label>
                <input id="name" class="form-control" type="text" placeholder="Product name" name="name" required="true" value="<%= product ? product.name : '' %>">
            </div>
            <div class="form-group">
                <label for="category">Category:</label>
                <select id="category" class="form-control" name="category" required="true">
                    <% categories.forEach(function(category) { %>
                        <% if (product && product.category && category._id.toString() === product.category.toString()) { %>
                            <option value="<%= category._id %>" selected><%= category.name %></option>
                        <% } else { %>
                            <option value="<%= category._id %>"><%= category.name %></option>
                        <% } %>
                    <% }) %>
                </select>
            </div>
            <div class="form-group">
                <label for="description">Description:</label>
                <textarea id="description" class="form-control" placeholder="Description" name="description" required="true"><%= product ? product.description : '' %></textarea>
            </div>
            <div class="form-group">
                <label for="units">Units:</label>
                <input id="units" class="form-control" type="tel" placeholder="Units" name="units" value="<%= product ? product.units : '' %>" required="true">
            </div>
            <div class="form-group">
                <label for="price">Price:</label>
                <input id="price" class="form-control" type="tel" placeholder="Price" name="price" value="<%= product ? product.price : '' %>" required="true">
            </div>
            <div class="form-group">
                <label for="image">Image:</label>
            <input id="image" class="form-control" type="file" placeholder="upload product image" name="image" >
          
            </div>
            <button class="btn btn-primary" type="submit">Submit</button>
        </form>
    </div>
</div>
