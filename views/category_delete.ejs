<div class="container">
    <div class="indexDiv">

<h1> <%= category.name %></h1>


<% if (products.length) { %>
  <p style="margin-left: 220px;"><strong>Delete the following products before attempting to delete this categories.</strong></p>

  <div style="margin-left: 200px; margin-top: 20px">
    <h4 style="margin-left: 220px;">Products</h4>
    <dl>
      <%  products.forEach(function(product) { %>
        <dt>
          <a href="<%= product.url %>"><%= product.name %></a>
        </dt>
        <dd><%= product.description%></dd>
      <% }) %>
    </dl>
  </div>
<% } else { %>
  <p>Do you really want to delete this category?</p>
  <form method="POST" action="">
    <div class="form-group">
      <input id="categoryid" class="form-control" type="hidden" name="categoryid" required="true" value="<%= category._id %>">
    </div>
    <button class="btn btn-primary" type="submit">Delete</button>
  </form>
<% } %>

    </div>
    </div>